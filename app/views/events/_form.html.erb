<%= bootstrap_form_with(model: event, layout: :inline, id:"formSample", label_col: "col-sm-2", control_col: "col-sm-10") do |form| %>
<div class="card p-3 bg-light">
<div class="form-content">
  <div class="form-items">
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
          <% event.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


      <%= form.text_field :title %>



      <%= form.text_field :address %>



      <%= form.datetime_select :time %>



      <%= form.text_area :description %>



      <%= form.hidden_field :user_id, id: :event_user_id, value:current_user.id %>



      <%= form.file_field :image %>

   <center>
    <% if event.image? %>
    <div class = "image-wrapper">
      <%= image_tag event.image.thumb.url %>
    </div>
      <%= form.check_box :remove_image %>
    <% end %><br><br>
    <div class="actions">
      <%= form.submit class:"btn btn-dark" %>
    </div>
    </center>
  </div>
</div>
</div>
<% end %>
