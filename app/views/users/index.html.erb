<h1 class="events-edit-title">Manage Users</h1>

<div class="container">
<div class="card p-3 bg-light">
<table class="table table-light table-striped">
  <thead>
    <tr>
      <th><h4><b>Id</b></h4></th>
      <th><h4><b>Name</b></h4></th>
      <th><h4><b>Email</b></h4></th>
      <th><h4><b>Admin ?</b></h4></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.admin %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-dark btn-sm" %></td>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-dark btn-sm" %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
