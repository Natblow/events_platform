<h2 class="events-edit-title">Resend unlock instructions</h2>

<div class="container" id="deviseForm">
<%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <div class="card p-3 bg-light">
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="devise-field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="devise-actions">
      <%= f.submit "Resend unlock instructions", class:"btn btn-dark" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
