<h2 class="events-edit-title">Edit <%= resource_name.to_s.humanize %></h2>
<div class="container" id="deviseForm">
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :inline, id:"formSample", html: { method: :put }, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
<div class="card p-3 bg-light">
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="devise-field">
    <%= f.text_field :name, maxlength: 25, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="devise-field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="devise-field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field_without_bootstrap :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="devise-field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="devise-field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field_without_bootstrap :current_password, autocomplete: "current-password" %>
  </div>

  <div class="devise-actions">
    <center><%= f.submit "Update", class:"btn btn-dark" %></center>
  </div>

  </div>
  <% end %>
  <div class = "edit-links">
  <%= link_to "Back", :back, class:"btn btn-dark btn-sm" %>
  </div>

<p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger btn-sm" %></p>

</div>
