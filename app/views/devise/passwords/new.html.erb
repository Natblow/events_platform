<h2 class="events-edit-title">Forgot your password?</h2>

<div class="container" id="deviseForm">
  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="card p-3 bg-light">
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="devise-field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="devise-actions">
      <%= f.submit "Send me reset password instructions", class:"btn btn-dark" %>
    </div>
  <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>
